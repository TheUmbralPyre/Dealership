@model Dealership.Entities.ViewModels.Cars.CarsEditViewModel

<h1>Edit</h1>

<h4>Car</h4>
<hr />

<div class="row">

    <div class="col-md-4">

        <form asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="row">

                <div class="col">

                    <div class="form-group">
                        <label asp-for="ModelName" class="control-label"></label>
                        <input asp-for="ModelName" class="form-control" />
                        <span asp-validation-for="ModelName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Generation" class="control-label"></label>
                        <input asp-for="Generation" class="form-control" />
                        <span asp-validation-for="Generation" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Year" class="control-label"></label>
                        <input asp-for="Year" class="form-control" />
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="BodyType" class="control-label"></label>
                        <select asp-for="BodyType" asp-items="Html.GetEnumSelectList<BodyType>()"></select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Color" class="control-label"></label>
                        <input asp-for="Color" class="form-control" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Transmission" class="control-label"></label>
                        <select asp-for="Transmission" asp-items="Html.GetEnumSelectList<Transmission>()"></select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Mileage" class="control-label"></label>
                        <input asp-for="Mileage" class="form-control" />
                        <span asp-validation-for="Mileage" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <select asp-for="Status" asp-items="Html.GetEnumSelectList<Status>()"></select>
                    </div>

                </div>

                <div class="col">

                    <div class="form-group">
                        <label asp-for="EngineType" class="control-label"></label>
                        <select asp-for="EngineType" asp-items="Html.GetEnumSelectList<EngineType>()" id="type"></select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Displacement" class="control-label"></label>
                        <input asp-for="Displacement" class="form-control"/>
                        <span asp-validation-for="Displacement" class="text-danger" id="displacement"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Horsepower" class="control-label"></label>
                        <input asp-for="Horsepower" class="form-control" />
                        <span asp-validation-for="Horsepower" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Kilowatts" class="control-label"></label>
                        <input asp-for="Kilowatts" class="form-control" />
                        <span asp-validation-for="Kilowatts" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="NewtonMeters" class="control-label"></label>
                        <input asp-for="NewtonMeters" class="form-control" />
                        <span asp-validation-for="NewtonMeters" class="text-danger"></span>
                    </div>

                </div>

            </div>

            <div class="form-group">

                <input type="submit" value="Save" class="btn btn-primary" />

            </div>

        </form>

    </div>

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
