@model Tuple<IEnumerable<Dealership.Entities.ViewModels.CarsForSale.CarsForSaleIndexViewModel>, Dealership.Entities.FilterClasses.SearchFilter>

<div class="row my-3 d-flex flex-column flex-grow-1 align-content-center">

    <form asp-action="Search"
          method="get" class="form-inline d-sm-inline-flex w-75 card p-2">

        <div class="d-flex flex-column flex-grow-1">

            <div class="d-flex flex-grow-1 my-2">

                <input class="form-control mx-2" type="search" asp-for="Item2.TitleFilter" name="TitleFilter"
                   placeholder="Enter Model or Brand" aria-label="Search">

                <input class="form-control mx-2" type="text" asp-for="Item2.ColorFilter" name="ColorFilter"
                   placeholder="Enter Car Color">

            </div>

            <div class="d-flex flex-grow-1 my-2">

                <select class="form-select mx-2" asp-items="Html.GetEnumSelectList<Transmission>()"
                        asp-for="Item2.TransmissionFilter" name="TransmissionFilter">
                        
                    <option selected="selected" value="@null">Select a Transmission Type</option>
                        
                </select>

                <select class="form-select mx-2" asp-items="Html.GetEnumSelectList<BodyType>()"
                        asp-for="Item2.BodyTypeFilter" name="BodyTypeFilter">
                    
                    <option selected="selected" value="@null">Select a Body Type</option>
                    
                </select>

            </div>

            <div class="d-flex flex-grow-1 my-2">

                
                <div class="d-flex flex-grow-1 my-2">

                    <div class="form-group mx-2">

                        <label>Year From</label>
                        <input class="form-control my-2" type="number" asp-for="Item2.YearMinFilter" name="YearMinFilter">

                    </div>

                    <div class="form-group">

                        <label>To</label>
                        <input class="form-control my-2" type="number" asp-for="Item2.YearMaxFilter" name="YearMaxFilter">

                    </div>

                </div>

                <div class="d-flex flex-grow-1 my-2">

                    <div class="form-group mx-2">

                        <label>Mileage From</label>
                        <input class="form-control my-2" type="number" asp-for="Item2.MileageMinFilter" name="MileageMinFilter">

                    </div>

                    <div class="form-group">

                        <label>To</label>
                        <input class="form-control my-2" type="number" asp-for="Item2.MileageMaxFilter" name="MileageMaxFilter">

                    </div>

                </div>

            </div>

            <button class="btn btn-outline-dark" type="submit">Search</button>

        </div>

    </form>

</div>

<div class="row gy-4 gx-5">

       @foreach (var item in Model.Item1) {

            <div class="col-4">

                <div class="card border-0 text-center hover-darken">

                    <img src="~/@item.ThumbnailPath" class="align-self-center rounded img-fluid"/>

                    <div class="d-flex flex-column">

                        <h5 class="m-0">@Html.DisplayFor(modelItem => item.Title)</h5>

                        <p class="m-0">
                             @Html.DisplayFor(modelItem => item.EngineType)
                             @Html.DisplayFor(modelItem => item.Displacement) 
                             @Html.DisplayFor(modelItem => item.Horsepower)
                        </p>

                        <h6 class="m-0">@Html.DisplayFor(modelItem => item.Price)</h6>

                    </div>

                    <a asp-action="Details" asp-route-id="@item.Id" class="stretched-link"></a>

                </div>

            </div>
       }
</div>